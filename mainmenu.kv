<FixedSizeLabel@Label>
    size_hint_y: None
    height: '29sp'

<FixedSizeTextInput@TextInput>
    size_hint_y: None
    height: '29sp'
    multiline: False

<Mainmenu>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'NEW'
            on_press: root.new_button_press()
        Button:
            text: 'LOAD'
            on_press: root.load_button_press()

<CreateProject>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: 'Create new Buildozer Project'
        ScrollView:
            do_scroll_x: False
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                FixedSizeLabel:
                    text: 'Title'
                FixedSizeTextInput:
                    id: create_project_title
                    text: 'Test App'
                FixedSizeLabel:
                    text: 'Package Name'
                FixedSizeTextInput:
                    id: create_project_package
                    text: 'myapp'
                FixedSizeLabel:
                    text: 'Package Domain'
                FixedSizeTextInput:
                    id: create_project_domain
                    text: 'org.test'
                FixedSizeLabel:
                    text: 'Orientation'
                ToggleButton:
                    text: 'all'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_all
                ToggleButton:
                    text: 'landscape'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_landscape
                ToggleButton:
                    text: 'portrait'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_portrait
                    state: 'down'
        Button:
            text: 'Create'
            on_press: root.create_button_press()
            height: root.height / 6
            size_hint_y: None

<LoadProject>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: '[b]Title: Loading...[/b]'
                markup: True
                id: load_project_title
        Button:
            text: 'Edit'
            on_press: root.edit_button_press()
            size_hint_y: None
            height: root.height / 10
        Button:
            text: 'Compile'
            on_press: root.compile_button_press()
            size_hint_y: None
            height: root.height / 10

<CompileProject>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: '[b]Compile Project[b]'
                markup: True
        Label:
            text: 'Options:'
            height: root.height / 10
            size_hint_y: None
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Label:
                text: 'Target'
            Label:
                text: 'Configuration:'
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'
                ToggleButton:
                    text: 'Android'
                    id: compile_target_android
                ToggleButton:
                    text: 'iOS'
                    id: compile_target_ios
                ToggleButton:
                    text: 'Windows (not supported yet)'
                    disabled: True
                    id: compile_target_windows
                ToggleButton:
                    text: 'Linux (not supported yet)'
                    disabled: True
                    id: compile_target_linux
            BoxLayout:
                orientation: 'vertical'
                ToggleButton:
                    text: 'debug'
                    group: 'configuration'
                    id: compile_debug
                ToggleButton:
                    text: 'release'
                    group: 'configuration'
                    id: compile_release
                Label:
                    text: 'Additional Stuff:'
                ToggleButton:
                    text: 'deploy'
                    id: compile_deploy
                ToggleButton:
                    text: 'run'
                    id: compile_run

        Button:
            text: 'Compile'
            on_press: root.compile_button_press()
            size_hint_y: None
            height: root.height / 10
        Label:
            text: ''
            size_hint_y: None
            height: root.height / 15
            id: compile_project_label

<EditProject>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: '[b]Edit Project[b]'
                markup: True
            Label:
                id: current_sub_menu
                text: 'Basic'
            Button:
                text: 'Save'
                id: save_button
                markup: True
                on_press: root.save()
        Label:
            size_hint_y: None
            height: root.height / 50
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                width: root.width / 10
                size_hint_x: None
                Button:
                    text: 'Basic'
                    on_press: root.switch_to('Basic Settings')
                Button:
                    text: 'Inc/Exc'
                    on_press: root.switch_to('Includes/Excludes')
                Button:
                    text: 'Android'
                    on_press: root.switch_to('Android Settings')
                Button:
                    text: 'iOS'
                    on_press: root.switch_to('iOS Settings')
                Button:
                    text: 'Other'
                    on_press: root.switch_to('Others')
                Button:
                    text: 'Buildozer'
                    on_press: root.switch_to('Buildozer')
            ScreenManager:
                id: screen_manager
                Screen:
                    id: screen_settings_basic
                    name: 'Basic Settings'
                    ScrollView:
                        do_scroll_x: False
                        GridLayout:
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
                            FixedSizeLabel:
                                text: 'Title'
                            FixedSizeTextInput:
                                id: basic_title
                            FixedSizeLabel:
                                text: 'Package Name'
                            FixedSizeTextInput:
                                id: basic_package
                            FixedSizeLabel:
                                text: 'Package Domain'
                            FixedSizeTextInput:
                                id: basic_domain
                            FixedSizeLabel:
                                text: 'Orientation'
                            BoxLayout:
                                size_hint_y: None
                                height: '29sp'
                                orientation: 'horizontal'
                                ToggleButton:
                                    text: 'all'
                                    size_hint_y: None
                                    height: '29sp'
                                    group: 'orientation'
                                    id: basic_all
                                ToggleButton:
                                    text: 'landscape'
                                    size_hint_y: None
                                    height: '29sp'
                                    group: 'orientation'
                                    id: basic_landscape
                                ToggleButton:
                                    text: 'portrait'
                                    size_hint_y: None
                                    height: '29sp'
                                    group: 'orientation'
                                    id: basic_portrait
                            ToggleButton:
                                text: 'Fullscreen'
                                size_hint_y: None
                                height: '29sp'
                                id: basic_fullscreen
                Screen:
                    name: 'Includes/Excludes'
                    id: screen_settings_includes
                    ScrollView:
                        do_scroll_x: False
                        GridLayout:
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
                            FixedSizeLabel:
                                text: 'Source Dir'
                            FixedSizeTextInput:
                                id: inc_sourcedir
                            FixedSizeLabel:
                                text: 'Include Extensions'
                            FixedSizeTextInput:
                                id: inc_inc_exts
                            FixedSizeLabel:
                                text: 'Exclude Extensions'
                            FixedSizeTextInput:
                                id: inc_exc_exts
                            FixedSizeLabel:
                                text: 'Exclude Patterns'
                            FixedSizeTextInput:
                                id: inc_exc_patterns
                            FixedSizeLabel:
                                text: 'Exclude Directories'
                            FixedSizeTextInput:
                                id: inc_exc_dirs
                            FixedSizeLabel:
                                text: 'Application Requirements'
                            FixedSizeTextInput:
                                id: inc_app_reqs
                            FixedSizeLabel:
                                text: 'Garden Requirements'
                            FixedSizeTextInput:
                                id: inc_garden_reqs
                            FixedSizeLabel:
                                text: 'Presplash'
                            FixedSizeTextInput:
                                id: inc_presplash
                            FixedSizeLabel:
                                text: 'Icon'
                            FixedSizeTextInput:
                                id: inc_icon
                Screen:
                    name: 'Android Settings'
                    id: screen_settings_android
                    ScrollView:
                        do_scroll_x: False
                        GridLayout:
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
                            FixedSizeLabel:
                                text: 'Permissions'
                            FixedSizeTextInput:
                                id: android_permissions
                            FixedSizeLabel:
                                text: 'API level'
                            FixedSizeTextInput:
                                id: android_api
                            FixedSizeLabel:
                                text: 'Minimum API level'
                            FixedSizeTextInput:
                                id: android_minapi
                            FixedSizeLabel:
                                text: 'SDK version'
                            FixedSizeTextInput:
                                id: android_sdk
                            FixedSizeLabel:
                                text: 'NDK version'
                            FixedSizeTextInput:
                                id: android_ndk
                            FixedSizeLabel:
                                text: 'Private Storage'
                            FixedSizeTextInput:
                                id: android_private_storage
                            FixedSizeLabel:
                                text: 'NDK Path'
                            FixedSizeTextInput:
                                id: android_ndk_path
                            FixedSizeLabel:
                                text: 'SDK Path'
                            FixedSizeTextInput:
                                id: android_sdk_path
                            FixedSizeLabel:
                                text: 'P4A Path'
                            FixedSizeTextInput:
                                id: android_p4a_path
                            FixedSizeLabel:
                                text: 'P4A Whitelist'
                            FixedSizeTextInput:
                                id: android_p4a_whitelist
                            FixedSizeLabel:
                                text: 'P4A Branch'
                            FixedSizeTextInput:
                                id: android_p4a_branch
                            FixedSizeLabel:
                                text: 'Entrypoint'
