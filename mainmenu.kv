<Mainmenu>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'NEW'
            on_press: root.new_button_press()
        Button:
            text: 'LOAD'
            on_press: root.load_button_press()

<CreateProject>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: 'Create new Buildozer Project'
        ScrollView:
            do_scroll_x: False
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                Label:
                    text: 'Title'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_title
                    size_hint_y: None
                    height: '29sp'
                    text: 'Test App'
                Label:
                    text: 'Package Name'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_package
                    size_hint_y: None
                    height: '29sp'
                    text: 'myapp'
                Label:
                    text: 'Package Domain'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_domain
                    size_hint_y: None
                    height: '29sp'
                    text: 'org.test'
                Label:
                    text: 'Orientation'
                    size_hint_y: None
                    height: '29sp'
                ToggleButton:
                    text: 'landscape'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_landscape
                ToggleButton:
                    text: 'portrait'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_portrait
                    state: 'down'
        Button:
            text: 'Create'
            on_press: root.create_button_press()
            height: root.height / 6
            size_hint_y: None

<LoadProject>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: '[b]Title: Loading...[/b]'
                markup: True
                id: load_project_title
        Button:
            text: 'Edit'
            on_press: root.edit_button_press()
            size_hint_y: None
            height: root.height / 10
        Button:
            text: 'Compile'
            on_press: root.compile_button_press()
            size_hint_y: None
            height: root.height / 10

<CompileProject>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: '[b]Compile Project[b]'
                markup: True
        Label:
            text: 'Options:'
            height: root.height / 10
            size_hint_y: None
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Label:
                text: 'Target'
            Label:
                text: 'Configuration:'
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'
                ToggleButton:
                    text: 'Android'
                    id: compile_target_android
                ToggleButton:
                    text: 'iOS'
                    id: compile_target_ios
                ToggleButton:
                    text: 'Windows (not supported yet)'
                    disabled: True
                    id: compile_target_windows
                ToggleButton:
                    text: 'Linux (not supported yet)'
                    disabled: True
                    id: compile_target_linux
            BoxLayout:
                orientation: 'vertical'
                ToggleButton:
                    text: 'debug'
                    group: 'configuration'
                    id: compile_debug
                ToggleButton:
                    text: 'release'
                    group: 'configuration'
                    id: compile_release
                Label:
                    text: 'Additional Stuff:'
                ToggleButton:
                    text: 'deploy'
                    id: compile_deploy
                ToggleButton:
                    text: 'run'
                    id: compile_run

        Button:
            text: 'Compile'
            on_press: root.compile_button_press()
            size_hint_y: None
            height: root.height / 10
        Label:
            text: ''
            size_hint_y: None
            height: root.height / 15
            id: compile_project_label

<EditProject>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: '[b]Edit Project[b]'
                markup: True