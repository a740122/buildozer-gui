                                id: android_add_jars
                            FixedSizeLabel:
                                text: 'Additional Java files'
                            FixedSizeTextInput:
                                id: android_add_src
                            FixedSizeLabel:
                                text: 'Ouya Category'
                            FixedSizeTextInput:
                                id: android_ouya_category
                            FixedSizeLabel:
                                text: 'Ouya Icon Filename'
                            FixedSizeTextInput:
                                id: android_ouya_icon_filename
                            FixedSizeLabel:
                                text: 'XML intent filters'
                            FixedSizeTextInput:
                                id: android_manifest_intent_filters
                            FixedSizeLabel:
                                text: 'Additional Libraries (armeabi)'
                            FixedSizeTextInput:
                                id: android_add_libraries_armeabi
                            FixedSizeLabel:
                                text: 'Additional Libraries (armeabi v7a)'
                            FixedSizeTextInput:
                                id: android_add_libraries_armeabi_v7a
                            FixedSizeLabel:
                                text: 'Additional Libraries (x86)'
                            FixedSizeTextInput:
                                id: android_add_libraries_x86
                            FixedSizeLabel:
                                text: 'Additional Libraries (mips)'
                            FixedSizeTextInput:
                                id: android_add_libraries_mips
                            FixedSizeLabel:
                                text: 'Wakelock'
                            FixedSizeTextInput:
                                id: android_wakelock
                            FixedSizeLabel:
                                text: 'Meta Data'
                            FixedSizeTextInput:
                                id: android_meta_data
                            FixedSizeLabel:
                                text: 'Library project'
                            FixedSizeTextInput:
                                id: android_library_references
                Screen:
                    name: 'iOS Settings'
                    id: screen_settings_ios
                    ScrollView:
                        do_scroll_x: False
                        GridLayout:
                            cols: 1
                            size_hint_y: None
