<Mainmenu>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'NEW'
            on_press: root.new_button_press()
        Button:
            text: 'LOAD'
            on_press: root.load_button_press()

<CreateProject>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: 'Create new Buildozer Project'
        ScrollView:
            do_scroll_x: False
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                Label:
                    text: 'Title'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_title
                    size_hint_y: None
                    height: '29sp'
                    text: 'Test App'
                Label:
                    text: 'Package Name'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_package
                    size_hint_y: None
                    height: '29sp'
                    text: 'myapp'
                Label:
                    text: 'Package Domain'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_domain
                    size_hint_y: None
                    height: '29sp'
                    text: 'org.test'
                Label:
                    text: 'Orientation'
                    size_hint_y: None
                    height: '29sp'
                ToggleButton:
                    text: 'all'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_all
                ToggleButton:
                    text: 'landscape'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_landscape
                ToggleButton:
                    text: 'portrait'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_portrait
                    state: 'down'
        Button:
            text: 'Create'
            on_press: root.create_button_press()
            height: root.height / 6
            size_hint_y: None

<LoadProject>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: '[b]Title: Loading...[/b]'
                markup: True
                id: load_project_title
        Button:
            text: 'Edit'
            on_press: root.edit_button_press()
            size_hint_y: None
            height: root.height / 10
        Button:
            text: 'Compile'
            on_press: root.compile_button_press()
            size_hint_y: None
            height: root.height / 10

<CompileProject>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: '[b]Compile Project[b]'
                markup: True
        Label:
            text: 'Options:'
            height: root.height / 10
            size_hint_y: None
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Label:
                text: 'Target'
            Label:
                text: 'Configuration:'
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'
                ToggleButton:
                    text: 'Android'
                    id: compile_target_android
                ToggleButton:
                    text: 'iOS'
                    id: compile_target_ios
                ToggleButton:
                    text: 'Windows (not supported yet)'
                    disabled: True
                    id: compile_target_windows
                ToggleButton:
                    text: 'Linux (not supported yet)'
                    disabled: True
                    id: compile_target_linux
            BoxLayout:
                orientation: 'vertical'
                ToggleButton:
                    text: 'debug'
                    group: 'configuration'
                    id: compile_debug
                ToggleButton:
                    text: 'release'
                    group: 'configuration'
                    id: compile_release
                Label:
                    text: 'Additional Stuff:'
                ToggleButton:
                    text: 'deploy'
                    id: compile_deploy
                ToggleButton:
                    text: 'run'
                    id: compile_run

        Button:
            text: 'Compile'
            on_press: root.compile_button_press()
            size_hint_y: None
            height: root.height / 10
        Label:
            text: ''
            size_hint_y: None
            height: root.height / 15
            id: compile_project_label

<EditProject>:
    GridLayout:
        cols: 1
        BoxLayout:
            orientation: 'horizontal'
            height: root.height / 10
            size_hint_y: None
            Button:
                text: 'Home'
                on_press: root.home()
                width: root.width / 10
                size_hint_x: None
            Button:
                text: 'Back'
                on_press: root.back()
                width: root.width / 10
                size_hint_x: None
            Label:
                text: '[b]Edit Project[b]'
                markup: True
            Label:
                id: current_sub_menu
                text: 'Basic'
            Button:
                text: 'Save'
                id: save_button
                markup: True
                on_press: root.save()
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                width: root.width / 10
                size_hint_x: None
                Button:
                    text: 'Basic'
                    on_press: root.switch_to('Basic Settings')
                Button:
                    text: 'Inc/Exc'
                    on_press: root.switch_to('Includes/Excludes')
                Button:
                    text: 'Android'
                    on_press: root.switch_to('Android Settings')
                Button:
                    text: 'iOS'
                    on_press: root.switch_to('iOS Settings')
                Button:
                    text: 'Other'
                    on_press: root.switch_to('Others')
                Button:
                    text: 'Buildozer'
                    on_press: root.switch_to('Buildozer')
            ScreenManager:
                id: screen_manager
                Screen:
                    id: screen_settings_basic
                    name: 'Basic Settings'
                    ScrollView:
                        do_scroll_x: False
                        GridLayout:
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
                            Label:
                                text: 'Title'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: basic_title
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Package Name'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: basic_package
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Package Domain'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: basic_domain
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Orientation'
                                size_hint_y: None
                                height: '29sp'
                            BoxLayout:
                                size_hint_y: None
                                height: '29sp'
                                orientation: 'horizontal'
                                ToggleButton:
                                    text: 'all'
                                    size_hint_y: None
                                    height: '29sp'
                                    group: 'orientation'
                                    id: basic_all
                                ToggleButton:
                                    text: 'landscape'
                                    size_hint_y: None
                                    height: '29sp'
                                    group: 'orientation'
                                    id: basic_landscape
                                ToggleButton:
                                    text: 'portrait'
                                    size_hint_y: None
                                    height: '29sp'
                                    group: 'orientation'
                                    id: basic_portrait
                            ToggleButton:
                                text: 'Fullscreen'
                                size_hint_y: None
                                height: '29sp'
                                id: basic_fullscreen
                Screen:
                    name: 'Includes/Excludes'
                    id: screen_settings_includes
                    ScrollView:
                        do_scroll_x: False
                        GridLayout:
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
                            Label:
                                text: 'Source Dir'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: inc_sourcedir
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Include Extensions'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: inc_inc_exts
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Exclude Extensions'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: inc_exc_exts
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Exclude Patterns'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: inc_exc_patterns
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Exclude Directories'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: inc_exc_dirs
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Application Requirements'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: inc_app_reqs
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Garden Requirements'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: inc_garden_reqs
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Presplash'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: inc_presplash
                                size_hint_y: None
                                height: '29sp'
                            Label:
                                text: 'Icon'
                                size_hint_y: None
                                height: '29sp'
                            TextInput:
                                multiline: False
                                id: inc_icon
                                size_hint_y: None
                                height: '29sp'
                Screen:
                    name: 'Android Settings'
                    id: screen_settings_android
                Screen:
                    name: 'iOS Settings'
                    id: screen_settings_ios
                Screen:
                    name: 'Others'
                    id: screen_settings_others
                Screen:
                    name: 'Buildozer'
                    id: screen_settings_buildozer