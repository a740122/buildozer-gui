<Mainmenu>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'NEW'
            on_press: root.new_button_press()
        Button:
            text: 'LOAD'
            on_press: root.load_button_press()

<CreateProject>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Create new Buildozer Project'
            height: root.height / 10
            size_hint_y: None
        ScrollView:
            do_scroll_x: False
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                Label:
                    text: 'Title'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_title
                    size_hint_y: None
                    height: '29sp'
                    text: 'Test App'
                Label:
                    text: 'Package Name'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_package
                    size_hint_y: None
                    height: '29sp'
                    text: 'myapp'
                Label:
                    text: 'Package Domain'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_domain
                    size_hint_y: None
                    height: '29sp'
                    text: 'org.test'
                Label:
                    text: 'Orientation'
                    size_hint_y: None
                    height: '29sp'
                ToggleButton:
                    text: 'landscape'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_landscape
                ToggleButton:
                    text: 'portrait'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_portrait
                    state: 'down'
        Button:
            text: 'Create'
            on_press: root.create_button_press()
            height: root.height / 6
            size_hint_y: None

<LoadProject>:
    GridLayout:
        cols: 1
        Label:
            text: '[b]Title: Loading...[/b]'
            id: load_project_title
            size_hint_y: None
            height: root.height / 10
        Button:
            text: 'Edit'
            on_press: root.edit_button_press()
            size_hint_y: None
            height: root.height / 10
        Button:
            text: 'Compile'
            on_press: root.compile_button_press()
            size_hint_y: None
            height: root.height / 10