<Mainmenu>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'NEW'
            on_press: root.new_button_press()
        Button:
            text: 'LOAD'
            on_press: root.load_button_press()

<CreateProject>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Create new Buildozer Project'
            height: root.height / 10
            size_hint_y: None
        ScrollView:
            do_scroll_x: False
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                Label:
                    text: 'Title'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_title
                    size_hint_y: None
                    height: '29sp'
                    text: 'Test App'
                Label:
                    text: 'Package Name'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_package
                    size_hint_y: None
                    height: '29sp'
                    text: 'myapp'
                Label:
                    text: 'Package Domain'
                    size_hint_y: None
                    height: '29sp'
                TextInput:
                    multiline: False
                    id: create_project_domain
                    size_hint_y: None
                    height: '29sp'
                    text: 'org.test'
                Label:
                    text: 'Orientation'
                    size_hint_y: None
                    height: '29sp'
                ToggleButton:
                    text: 'landscape'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_landscape
                ToggleButton:
                    text: 'portrait'
                    size_hint_y: None
                    height: '29sp'
                    group: 'orientation'
                    id: create_project_portrait
                    state: 'down'
        Button:
            text: 'Create'
            on_press: root.create_button_press()
            height: root.height / 6
            size_hint_y: None

<LoadProject>:
    GridLayout:
        cols: 1
        Label:
            text: '[b]Title: Loading...[/b]'
            markup: True
            id: load_project_title
            size_hint_y: None
            height: root.height / 10
        Button:
            text: 'Edit'
            on_press: root.edit_button_press()
            size_hint_y: None
            height: root.height / 10
        Button:
            text: 'Compile'
            on_press: root.compile_button_press()
            size_hint_y: None
            height: root.height / 10

<CompileProject>:
    GridLayout:
        cols: 1
        Label:
            text: '[b]Compile Project[b]'
            markup: True
            size_hint_y: None
            height: root.height / 10
        Label:
            text: 'Options:'
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Target'
                ToggleButton:
                    text: 'Android'
                    id: compile_target_android
                ToggleButton:
                    text: 'iOS'
                    disabled: True
                    id: compile_target_ios
                ToggleButton:
                    text: 'Windows'
                    disabled: True
                    id: compile_target_windows
                ToggleButton:
                    text: 'Linux'
                    disabled: True
                    id: compile_target_linux
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Configuration:'
                ToggleButton:
                    text: 'debug'
                    group: 'configuration'
                    id: compile_debug
                ToggleButton:
                    text: 'release'
                    group: 'configuration'
                    id: compile_release
                Label:
                    text: 'Additional Stuff:'
                ToggleButton:
                    text: 'deploy'
                    id: compile_deploy
                ToggleButton:
                    text: 'run'
                    id: compile_run

        Button:
            text: 'Compile'
            on_press: root.compile_button_press()
            size_hint_y: None
            height: root.height / 10
        Label:
            text: ''
            size_hint_y: None
            height: root.height / 15
            id: compile_project_label
